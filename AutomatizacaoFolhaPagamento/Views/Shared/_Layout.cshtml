<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HolFree</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    @*<link rel="stylesheet" href="~/AutomatizacaoFolhaPagamento.styles.css" asp-append-version="true" />*@
</head>

<body id="body-pd">
    @if (ViewData["ShowHeader"] == null || (bool)ViewData["ShowHeader"])
    {
        <header class="header" id="header">
            <div class="header_toggle"> 
                <p class="navbar-brand" id="header-toggle" style="color: #000; padding-bottom: 0; padding-top: 0; margin-bottom: 0;"><span style="font-weight: 600">Hol</span><span style="background-color: #376a26; padding: 4px 8px; border: 1px solid #264716; border-radius: 4px; font-weight: 600">Free</span> - Automatização de Holerites</p> 
                </div>
        </header>
        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>
                    <!--<a asp-action="Index" asp-controller="Home" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">HolFree</span> </a>-->
                    <div class="nav_list">
                        <a asp-action="Index" asp-controller="Home" class="nav_link active"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Home</span> </a>
                        <a asp-action="Index" asp-controller="Departamentos" class="nav_link"> <i class='bx bx-sitemap nav_icon'></i> <span class="nav_name">Deptos</span> </a>
                        <a asp-action="Index" asp-controller="Cargos" class="nav_link"> <i class='bx bx-group nav_icon'></i> <span class="nav_name">Cargos</span></a>
                        <a asp-action="Index" asp-controller="Funcionarios" class="nav_link"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Funcionários</span></a>
                        <a asp-action="Detalhado" asp-controller="Relatorio" class="nav_link"> <i class='bx bx-message-square-detail nav_icon'></i> <span class="nav_name">Relatório</span> </a>
                        
                    </div>
                </div>
                <form id="logoutForm" asp-action="Logout" asp-controller="Login" method="post" style="display: none;">
                </form>
                <span onclick="document.getElementById('logoutForm').submit();" class="nav_link" style="cursor:pointer;">
                    <i class='bx bx-log-out nav_icon'></i>
                    <span class="nav_name">Sair</span>
                </span>
            </nav>
        </div>

    }
   
    <div class="container-fluid">
        <main role="main" class="pt-5 pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
