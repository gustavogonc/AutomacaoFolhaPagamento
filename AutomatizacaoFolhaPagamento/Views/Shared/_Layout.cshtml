<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HolFree</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/AutomatizacaoFolhaPagamento.styles.css" asp-append-version="true" />*@
</head>
<body>
    @if (ViewData["ShowHeader"] == null || (bool)ViewData["ShowHeader"])
    {

        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #739e52;">
            <div class="container-fluid">
                <a class="navbar-brand"data-bs-toggle="offcanvas" href="#offcanvasExample" style="color: #000;"><span style="font-weight: 600">Hol</span><span style="background-color: #376a26; padding: 4px 8px; border: 1px solid #264716; border-radius: 4px; font-weight: 600">Free</span> - Automatização de Holerites</a>
                <button class="navbar-toggler btn-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>-->
            </div>
        </nav>
    </header>}
    <div>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header border-1 border-dark">
                <a class="navbar-brand" data-bs-toggle="offcanvas" href="#offcanvasExample" style="color: #000;"><span style="font-weight: 600">Hol</span><span style="background-color: #376a26; padding: 4px 8px; border: 1px solid #264716; border-radius: 4px; font-weight: 600">Free</span></a>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
                </div>
                <ul class="" style="list-style: none; padding: 0;">
                    <li style="list-style: none;"><a class="dropdown-item" href="#">Action</a></li>
                    <li style="list-style: none;"><a class="dropdown-item" href="#">Another action</a></li>
                    <li style="list-style: none;"><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>

                <div class="dropdown mt-3">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Dropdown button
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
