@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel

<div class="container d-flex d-sm-block d-md-flex d-lg-fle mt-3 p-0" style="box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
border-radius: 8px; position: absolute; top: 50%; left: 50%; margin-right: -50%; transform: translate(-50%, -50%); height:75%">
    <div class="d-block w-100">
        <img src="~/lib/paper-clip.jpg" class="d-flex d-xs-none d-sm-none d-md-flex d-lg-flex" style="width:100%; height:100%; border-top-left-radius: 8px; border-bottom-left-radius: 8px" />
    </div>
    <div class="w-100" style="background-color: #739e52; border-top-right-radius: 8px; border-bottom-right-radius: 8px">
        <div clas="d-flex w-100" style="display: flex; flex-direction: column; justify-content: center; height: 100%;">
            <div style="">
                <h4 class="mt-3 mb-3">Acesse a sua conta</h4>
            </div>

            <form asp-controller="Login" asp-action="Login" method="post" class="d-block col-5">
                <div class="mb-3 mt-3">
                    <input asp-for="Email" type="email" placeholder="Email" class="form-control col-4" required />
                </div>
                <div class="mb-3">
                    <input asp-for="Password" type="password" placeholder="Senha" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success mb-3 w-100">Entrar</button>
            </form>
        </div>
    </div>
</div>